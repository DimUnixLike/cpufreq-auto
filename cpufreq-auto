#!/bin/bash

clocklow=800mhz #Clock minimo para cpu rodar
clockhigh=2300mhz #Maximo que a cpu pode chegar
declare -i numerocpu=3 #Come√ßa contar de 0 o numero de nucleos

GETDADOS(){
		echo "Digite o numero de Threads de sua CPU: (Ex: 2, 4, 8)"
		read numerocpu
		echo "Digite o clock alto desejado: (Ex: 2500mhz)"
		read clockhigh
		echo "Digite o clock baixo desejado: (ex: 800mhz)"
		read clocklow
}

CPU(){
	declare -i countercpu=0
	while [ $countercpu -le $numerocpu ]; do
		echo "cpufreq-set -c $countercpu -d $clocklow"
		echo "cpufreq-set -c $countercpu -u $clockhigh"
		countercpu+=1
	done
}

MAIN(){
	GETDADOS
	CPU
}

MAIN
