#!/bin/bash

clocklow=800mhz #Clock minimo para cpu rodar
clockhigh=2300mhz #Maximo que a cpu pode chegar
declare -i numerocpu=3 #Começa contar de 0 o numero de nucleos

AUTODADOS(){
    cpufreq-info > cpu.info
    numerocpu=$(cat cpu.info | grep -c "limites") # -c conta o numero de linhas no grep / FUNCIONANDO
    #clocklow=$(cat cpu.info | grep "") # deve recupear o clock minimo da cpu
    #clockhigh=$(cat cpu.info | grep "") # deve recuperar o clock maximo da cpu
    rm cpu.info
    echo $numerocpu $clocklow $clockhigh
}


GETDADOS(){
	numerocpu=$(zenity --entry --text "Digite o numero de Threads de sua CPU: (Ex: 2, 4, 8)" --title "cpuinfo-auto")
	numerocpu+=-1 #o cpufreq-set começa a contar da CPU 0
    clocklow=$(zenity --entry --text "Digite o clock minimo desejado: (Ex: 800mhz)" --title "cpuinfo-auto")
	clockhigh=$(zenity --entry --text "Digite o clock maximo desejado: (Ex: 2500mhz)" --title "cpuinfo-auto")   	
}

CPU(){
	declare -i countercpu=0
	while [ $countercpu -le $numerocpu ]; do
		cpufreq-set -c $countercpu -d $clocklow
		cpufreq-set -c $countercpu -u $clockhigh
		countercpu+=1
	done
}

MAIN(){
    AUTODADOS
}

MAIN
